<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/license_item_padding">

    <TextView
        android:id="@+id/licenseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/library_name"
        tools:text="LicenseDroid"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/licenseAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        tools:text="Ray"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/licenseType"
        android:layout_below="@id/licenseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="14sp"
        tools:text="Apache 2.0"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/expandIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow"
        android:rotation="90"
        android:layout_gravity="right"
        android:layout_below="@+id/licenseAuthor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>